               Height="20" 
               Margin="513,122,0,0" 
               TextWrapping="Wrap" 
               Text="---" 
               VerticalAlignment="Top" 
               Width="100"/>

            <TextBlock HorizontalAlignment="Left"
                Margin="631,11,0,0" 
                TextWrapping="Wrap" 
                Text="Pokoje" 
                VerticalAlignment="Top" 
                Width="87"/>

            <TextBox x:Name="rooms"
                HorizontalAlignment="Left" 
                Height="20" 
                Margin="631,30,0,0" 
                TextWrapping="Wrap" 
                Text="---" 
                VerticalAlignment="Top" 
                Width="100"/>

            <TextBlock HorizontalAlignment="Left"
                Margin="631,58,0,0" 
                TextWrapping="Wrap" 
                Text="Poziom" 
                VerticalAlignment="Top" 
                Width="87"/>

            <TextBox x:Name="floor"
                HorizontalAlignment="Left" 
                Height="20" 
                Margin="631,77,0,0" 
                TextWrapping="Wrap" 
                Text="---" 
                VerticalAlignment="Top" 
                Width="100"/>

            <TextBlock HorizontalAlignment="Left"
                Margin="631,104,0,0" 
                TextWrapping="Wrap" 
                Text="Zabudowa" 
                VerticalAlignment="Top" 
                Width="87"/>

